<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="node8.valetuncle.ConfirmationActivity">

    <include
        layout="@layout/toolbar_back"
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorBG"
        android:padding="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView"
                android:textColor="@color/colorWhite"
                android:text="Thanks! Did you get any SMS PIN?"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enter it here!"
                android:id="@+id/textView2"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <node8.valetuncle.views.ZanyEditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/number1"
                android:maxLength="1"
                android:textColor="@color/colorWhite"
                android:nextFocusRight="@+id/number2"
                android:paddingStart="20dp"
                android:paddingLeft="20dp" />

            <node8.valetuncle.views.ZanyEditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/number2"
                android:nextFocusRight="@+id/number3"
                android:maxLength="1"
                android:textColor="@color/colorWhite"
                android:paddingStart="20dp"
                android:paddingLeft="20dp" />

            <node8.valetuncle.views.ZanyEditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/number3"
                android:nextFocusRight="@+id/number4"
                android:textColor="@color/colorWhite"
                android:maxLength="1"
                android:paddingStart="20dp"
                android:paddingLeft="20dp" />

            <node8.valetuncle.views.ZanyEditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/number4"
                android:textColor="@color/colorWhite"
                android:maxLength="1"
                android:paddingStart="20dp"
                android:paddingLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_weight="1"
                android:text="Clear Field"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorText"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/resendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="23dp"
                android:text="Resend Code"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorText"
                android:layout_gravity="right"
                android:textAlignment="textEnd" />

        </LinearLayout>


        <Button
            android:id="@+id/nextBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buttons_main"
            android:text="NEXT"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="@drawable/button_forgot_text_color"
            android:layout_alignParentBottom="true" />


        <Button
            android:id="@+id/changeNumberBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buttons_main_red"
            android:text="CHANGE NUMBER"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="@drawable/button_forgot_text_color"
            android:layout_alignParentBottom="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/register"
            android:id="@+id/textView2"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</RelativeLayout>
